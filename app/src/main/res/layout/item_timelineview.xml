<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/robotoslab_medium"
        android:text="11:00"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_end_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/robotoslab_regular"
        android:text="12:00"
        android:textColor="@color/grey"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/tv_start_time"
        app:layout_constraintStart_toStartOf="@id/tv_start_time"
        app:layout_constraintTop_toBottomOf="@id/tv_start_time" />

    <com.github.vipulasri.timelineview.TimelineView
        android:id="@+id/timeline"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:minHeight="40dp"
        android:visibility="visible"
        app:endLineColor="@color/green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_start_time"
        app:layout_constraintTop_toTopOf="parent"
        app:lineStyle="normal"
        app:lineWidth="3dp"
        app:marker="@drawable/marker_task"
        app:markerInCenter="false"
        app:markerPaddingTop="20dp"
        app:markerSize="20dp"
        app:startLineColor="@color/green" />

    <com.github.vipulasri.timelineview.TimelineView
        android:id="@+id/timeline_local_time"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_marginStart="10dp"
        android:visibility="invisible"
        app:endLineColor="@color/green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_start_time"
        app:layout_constraintTop_toTopOf="parent"
        app:lineStyle="dash"
        app:lineWidth="3dp"
        app:marker="@drawable/curr_time_marker"
        app:markerInCenter="false"
        app:markerPaddingTop="20dp"
        app:markerSize="20dp"
        app:startLineColor="@color/green" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/task_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:cardBackgroundColor="@color/green"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/timeline"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- task title -->
            <TextView
                android:id="@+id/tv_card_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotoslab_medium"
                android:text="BDA Assignment"
                android:textSize="18sp"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- task added date -->
            <TextView
                android:id="@+id/tv_card_task_added_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/robotoslab_medium"
                android:maxLines="1"
                android:text="18 Oct"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_card_title" />

            <!-- last date -->
            <TextView
                android:id="@+id/tv_card_txtdue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/robotoslab_regular"
                android:text="Due - "
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_card_task_added_date" />

            <TextView
                android:id="@+id/tv_card_last_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotoslab_regular"
                android:maxLines="1"
                android:text="20 Oct"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/tv_card_txtdue"
                app:layout_constraintStart_toEndOf="@id/tv_card_txtdue"
                app:layout_constraintTop_toTopOf="@id/tv_card_txtdue" />

            <TextView
                android:id="@+id/tv_txt_attachments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotoslab_regular"
                android:maxLines="1"
                android:layout_marginTop="10dp"
                android:text="No Attachments"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_card_txtdue" />

            <View
                android:id="@+id/line_attachments"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:background="@color/green"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_txt_attachments" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:visibility="gone"
                android:text="Attachments"
                android:id="@+id/tv_attachments"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/line_attachments"
                android:layout_marginTop="10dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>